<p id="notice"><%= notice %></p>

<h1>Touring Routes</h1>

<table>
  <thead>
    <tr>
      <th>ICON</th>
      <th>User </th>
      <th>Touring name</th>
      <th>Touring desc</th>
      <th>Start date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @touring_routes.each do |touring_route| %>
      <tr>
        <td>
        <%= image_tag(current_user.avatar_url, width: 40) if current_user.avatar.present? %>
        </td>
        <td><%= current_user.name %></td>
        <td><%= touring_route.touring_name %></td>
        <td><%= touring_route.touring_desc %></td>
        <td><%= touring_route.start_date.strftime('%Y/%m/%d') %></td>
        <td><%= link_to 'Show', touring_route %></td>
        <td><%= link_to 'Edit', edit_touring_route_path(touring_route) %></td>
        <td><%= link_to 'Destroy', touring_route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

