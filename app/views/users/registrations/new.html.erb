<h2>アカウント登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {multipart: true}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  
  <div class="field">
    <div class="user_avatar_icon">
        <i class="fas fa-user"></i>
    </div>
    <%= f.label :avatar %><br/>
    <%= f.file_field :avatar %>
    <%= f.hidden_field :avatar_cache %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, value:"e-mail",autofocus: true, autocomplete: "email" , placeholder:"E-mailアドレス" %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true , placeholder:"名前" %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder:"パスワード"  %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , placeholder:"パスワード（確認）" %>
  </div>

  <div class="actions">
    <%= f.submit "登　録" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
